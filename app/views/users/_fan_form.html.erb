<%= form_for(@user, :html => { :class => "fanForm"}) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.hidden_field :usertype, :value => "1" %>
	<div class="clearfix"></div>
	<div class="input-append">
		<%= f.text_field :email, :placeholder => "Enter your email", class: "span3" %>
		<%= f.submit "Submit", class: "btn btn-inverse" %>
	</div>
<% end %>

